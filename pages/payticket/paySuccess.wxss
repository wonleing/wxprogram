.containers{
  width: auto;
  height: 100%;
  padding-left: 42.27rpx;
  padding-right: 42.27rpx;
  padding-bottom: 100rpx;
  overflow-y: scroll;
}
.ticket{
  text-align: center;
}
.ticket .title{
  font-size: 42.27rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.ticket .title view:nth-child(2){
  color: #333;
  font-size: 21.51rpx;
  margin-bottom: 20rpx;
}
.ticket .title view:nth-child(3){
  color: #333;
  font-size: 27.17rpx;
}
.showTicket{
  margin-top: 10rpx;
}
.showTicket button{
  width: 70%;
  color: #fff;
  font-size: 38rpx;
  letter-spacing: 2rpx;
  line-height: 110.77rpx;
  border-radius: 120rpx;
  background-color: #4cc04b;
}
.showTicket .alt{
  color: #202b49;
  font-size: 21.74rpx;
  letter-spacing: 3rpx;
  margin-top: 33.21rpx;
  margin-bottom: 90.55rpx;
  margin-left: auto;
  margin-right: auto;
}


.showErweima{
  width: 100%;
  margin-top: 10rpx;
  overflow: hidden;
}
.showErweima .scroll-view{
  white-space: nowrap;
  display: flex;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
}
.showErweima .scroll-view .ticket{
  display: inline-block;
  margin-left: auto;
  margin-right: 45rpx;
}
.showErweima .scroll-view .ticket .ticket-code{
  border: 1px solid #4cc04b;
  box-shadow: 0 0 30rpx #4cc04b;
  border-radius: 10rpx;
  margin-bottom: 16.91rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.showErweima .scroll-view .ticket .ticket-code .code-image{
  width: 520rpx;
  height: 200rpx;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
}
.showErweima .scroll-view .ticket .active{
  border-radius: 10rpx;
  margin-bottom: 16.91rpx;
  margin-top: 45.28rpx;
}
.showErweima .scroll-view .ticket .active .active-image{
  width: 580rpx;
  height: 350rpx;
  margin-top: 20rpx;
}
.showErweima .scroll-view .ticket .active .active-image image{
  border-radius: 10rpx;
}
.showErweima .scroll-view .ticket image{
  width: 100%;
  height: 100%;
}
.showErweima .scroll-view .ticket .ticket-code .code{
  color: 18rpx;
  font-weight: bold;
  margin-left: auto;
  margin-top: 20rpx;
  margin-right: auto;
  transform: scale(0.8);
}
.showErweima .scroll-view .ticket .alt{
  color: #222c4b;
  font-size: 20.53rpx;
  text-align: center;
  padding: 6rpx 20rpx;
  background-color: #4cc04b;
  margin-left: auto;
  margin-right: auto;
  border-radius: 40rpx;
}
.showErweima .text{
  color: #222c4b;
  font-size: 20.53rpx;
}

.payMoney{
  margin-top: 22.46rpx;
  border-bottom: 1px solid #cecece;
}
.title-small{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20.2rpx;
  position: relative;
}
.payMoney .title-small .price{
  color: #9597a2;
  font-size: 30rpx;
  position: absolute;
  right: 0;
}
.payMoney .payMessage{
  display: flex;
  justify-content: flex-start;
}
.payMoney .list1,.list2{
  font-size: 24.15rpx;
  line-height: 39.25rpx;
}
.attention{
  color: #4cc04b;
  font-size: 24.15rpx;
  line-height: 88.16rpx;
}
.userMessage{
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #cecece;
}
.userMessage .user{
  color: #333;
  font-size: 22.95rpx;
  line-height: 39.86rpx;
}
.userMessage .user .userName text:nth-child(2){
  margin-left: 42.27rpx;
}

.explanation{
  padding-bottom: 24rpx;
  border-bottom: 1px solid #cecece;
}
.explanation .map{
  width: auto;
  height: 434.18rpx;
}
.explanation .alt{
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.detail{
  padding-top: 40rpx;
}
.content{
  font-size: 27.17rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #cecece;
}
.title{
  font-size: 39.25rpx;
  font-weight: bold;
}
.subtitle{
  font-weight: bold;
  margin-bottom: 30rpx;
}
.content .personIntroduce{
  color: #343434;
  line-height: 42.27rpx;
  margin-bottom: 21rpx;
}
.address-map{
  padding-top: 40rpx;
}
.map{
  margin-left: auto;
  margin-right: auto;
}
.empty{
  position: relative;
  top: -8rpx;
  height: 10rpx;
  background-color: #fff;
}
