/* myself.wxss */
.box{
  width: auto;
  height: 100%;
  padding: 36.23rpx 44.08rpx; 
  overflow-y: scroll;
  padding-bottom: 150rpx;
  position: relative;
}
.payDetail{
  width: auto;
  line-height: 120.77rpx;
  background-color: #4cc04b;
  color: #fff;
  display: flex;
  justify-content: space-between;
  padding-left: 44.08rpx;
  padding-right: 44.08rpx;
  border-radius: 10rpx;
  margin-bottom: 61.6rpx;
}
.payDetail text:nth-child(1){
  font-size: 26.57rpx;
}

.title{
  font-size: 42.27rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.title .titles view:nth-child(2){
  color: #333;
  font-size: 24.15rpx;
}
.title .arrowright{
  font-size: 52rpx;
  margin-left: 31.4rpx;
}

.payMoney{
  border-bottom: 1px solid #cecece;
  margin-top: 42.46rpx;
}
.title-small{
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 20.2rpx;
  position: relative;
}
.payMoney .title-small .price{
  color: #9597a2;
  font-size: 30rpx;
  position: absolute;
  right: 0;
}
.payMoney .payMessage{
  display: flex;
  justify-content: flex-start;
}
.payMoney .list1,.list2{
  font-size: 27.17rpx;
  line-height: 44rpx;
}
.attention{
  color: #4cc04b;
  font-size: 24.15rpx;
  line-height: 88.16rpx;
}

.userMessage{
  padding-top: 48.31rpx;
  padding-bottom: 63.41rpx;
}
.userMessage .user{
  color: #333;
  font-size: 27.17rpx;
  line-height: 44rpx;
}
.userMessage .user .userName text:nth-child(2){
  margin-left: 42.27rpx;
}

.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 12.68rpx;
  padding-bottom: 12.68rpx;
  border-top: 1px solid #9b9a9a;
  background-color: #fff;
  z-index: 100;
  display: flex;
}
.footer .price{
  font-size: 39.25rpx;
  flex: 7;
  line-height: 95.41rpx;
  padding-left: 48.31rpx;
}
.footer .explain{
  flex: 3;
  color: #08b096;
  font-size: 26.57rpx;
  text-decoration: underline;
  line-height: 95.41rpx;
}
.footer .button{
  width: 234.3rpx;
  background-color: #4cc04b;
  color: #fff;
  font-size: 32.61rpx;
  text-align: center;
  line-height: 95.41rpx;
  border-radius: 50px;
  margin-right: 38.04rpx;
  text-decoration: none;
}

.hideFooter{
  display: none;
}