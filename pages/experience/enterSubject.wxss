/* checkCity.wxss */
.containers{
  width: auto;
  height: 100%;
  overflow-y: scroll;
}
image{
  width: 100%;
  height: auto;
}
.topBanner{
  width: 100%;
  height: auto;
}
.content{
  padding-left: 60.39rpx;
  padding-right: 60.39rpx;
  margin-top: 20rpx;
}
.introduce{
  color: #333;
  font-size: 27.17rpx;
  line-height: 48.3rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.view{
  margin-bottom: 30rpx;
  padding-left: 60.39rpx;
  padding-right: 60.39rpx;
}
.view .bannerList{
  border: 1px solid #e9e9e9;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 4rpx #fafafa;
  position: relative;
  padding-bottom: 50rpx;
}
.heart{
  position: absolute;
  right: 33.21rpx;
  top: 33.21rpx;
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  z-index: 10;
}
.collect{
  position: absolute;
  right: 33.21rpx;
  top: 33.21rpx;
  color: red;
  font-size: 48rpx;
  font-weight: bold;
  z-index: 10;
}
.view .viewBanner .banner{
  width: 100%;
  height: auto;
  position: relative;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.view .viewBanner .banner image{
  max-height: 546.5rpx;
}
.view .viewBanner .banner .price{
  position: absolute;
  left: 0;
  bottom: 35.02rpx;
  width: 181.16rpx;
  color: #fff;
  font-size: 36.23rpx;
  text-align: center;
  line-height: 88.77rpx;
  background-color: rgba(0, 0, 0, 0.8)
}
.view .viewBanner .message{
  padding: 27.17rpx;
  padding-bottom: 15.09rpx;
  position: relative;
}
.view .viewBanner .message .tit{
  font-size: 35.02rpx;
  width: 95%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.view .viewBanner .message text{
  letter-spacing: 3rpx;
  margin-right: 1rpx;
}
.view .viewBanner .message .count{
  display: flex;
}
.view .viewBanner .message .count .star{
  display: flex;
}
.view .viewBanner .message .count .iconfont{
  color: #ff500b;
  font-size: 21.7rpx;
}
.view .viewBanner .message .count{
  color: #9c9c9c;
  font-size: 23rpx;
  line-height: 48.31rpx;
}
.view .viewBanner .message .distance{
  position: relative;
  width: 100%;
  color: #9c9c9c;
  font-size: 26rpx;
  white-space: nowrap;
  float: right;
  line-height: 66.42rpx;
  vertical-align: sub;
  text-align: right;
}
.view .viewBanner .message .distance .types{
  position: absolute;
  left: 0;
}
.view .viewBanner .message .distance .type{
  color: #ff8b2d;
  font-size: 18.11rpx;
  border: 1px solid #ff8b2d;
  border-radius: 10rpx;
  padding: 4rpx 2rpx;
}
.view .viewBanner .message .distance .type:nth-child(2){
  color: #ff0006;
  border: 1px solid #ff0006;
  margin-left: 9.6rpx;
}
.view .viewBanner .message .distance .meter{
  color: #08b096!important;
}
.view .viewBanner .message .distance .iconfont{
  font-size: 27.17rpx;
} 
.view .text{
  color: #333;
  font-size: 27.17rpx;
  line-height: 51.33rpx;
}
.addrinfo{
  color: #333;
  font-size: 27.17rpx;
  margin-top: 30rpx;
}