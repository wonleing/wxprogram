.containers{
  width: 100%;
  height: 100%;
  background-color: #eee;
  overflow-y: scroll;
  position: relative;
}
.hide{
  display: none;
}
.upper{
  position: absolute;
  top: 0;
}
.lower{
  position: absolute;
  bottom: 0;
}
.scrollArea{
  display: block; 
  margin-bottom: 24.15rpx;
}
.scrollArea .time{
  padding: 50.72rpx 27.7rpx 42.27rpx 27.7rpx;
  background-color: #fff;
  margin-bottom: 24.15rpx;
}
.scrollArea .time view{
  color: #333;
  font-size: 22.95rpx;
}
.scrollArea .time .timeNow{
  font-size: 85rpx;
  font-weight: normal;
  text-align: center;
  line-height: 179.95rpx;
}
.scrollArea .moneyExchange{
  background-color: #fff;
  margin-top: 24.15rpx;
  padding: 50.72rpx 27.7rpx 42.27rpx 27.7rpx;
}
.scrollArea .moneyExchange .title{
  font-size: 34.42rpx;
  font-weight: bold;
  line-height: 60.99rpx;
}
.scrollArea .moneyExchange .money{
  font-size: 24.15rpx;
  line-height: 60.39rpx;
  display: flex;
}
.scrollArea .moneyExchange .money text:nth-child(2){
  margin-left: 30rpx;
}
.scrollArea .moneyExchange .exchange{
  width: 100%;
  height: 200rpx;
  position: relative;
  display: flex;
  margin-top: 20rpx;
}
.scrollArea .moneyExchange .exchange .title{
  font-weight: bold;
}
.scrollArea .moneyExchange .exchange .input{
  display: flex;
  flex-direction: column;
}
.scrollArea .moneyExchange .exchange .input view{
  display: flex;
}
.scrollArea .moneyExchange .exchange .input view label{
  font-size: 28rpx;
  font-weight: 500;
  line-height: 77.3rpx;
}
.scrollArea .moneyExchange .exchange .input view input{
  width: 280rpx;
  border-color: #ccc;
}
.scrollArea .moneyExchange .exchange .checked{
  border: 1rpx solid #4cc04b!important;
  box-shadow: inset 0 0 10rpx #4cc04b;
}
.scrollArea .moneyExchange .exchange .submitBtn{
  position: absolute;
  right: 0;
  top: 20%;
}
.scrollArea .moneyExchange .exchange .submitBtn .iconfont{
  font-size: 56rpx;
}
.scrollArea .moneyExchange .exchange button{
  background-color: #fff;
}
.scrollArea .moneyExchange .exchange button::after{
  border: 0px;
}
.scrollArea .moneyExchange .exchange button:nth-child(1) view{
  width: 42px;
  height: 41px;
  transform: scale(0.8, 0.8);
}
.scrollArea .moneyExchange .exchange .resetBtn button{
  position: absolute;
  right: 0;
  top: 0;
  color: #6bd0c0;
}
.scrollArea .moneyExchange .exchange .input input{
  width: 253.02rpx;
  height: 77.3rpx;
  font-size: 26rpx;
  border: 1px solid #999;
  border-radius: 10rpx;
  padding-left: 22.34rpx;
}
.scrollArea .moneyExchange .exchange .input input:first-child{
  margin-bottom: 25.36rpx;
  margin-right: 20.53rpx;
}
.scrollArea .moneyExchange .exchange .moneyType{
  color: #010101;
  font-size: 21rpx;
}
.scrollArea .moneyExchange .exchange .moneyType view{
  line-height: 77.3rpx;
}
.scrollArea .moneyExchange .exchange .moneyType view:first-child{
  margin-bottom: 25.46rpx;
}
.annotation{
  font-size: 24rpx;
}
.section{
  background-color: #fff;
  padding: 32.27rpx 27.7rpx;
}
.section .title{
  font-size: 33.82rpx;
  font-weight: bold;
  line-height: 80.87rpx;
  margin-left: 20.53rpx;
}
.section .banner{
  overflow: hidden;
  position: relative;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.section .banner image{
  width: 100%;
  height: auto;
  border-radius: 10rpx;
}
.section .content view{
  color: #010101;
  line-height: 47rpx;
}
.section .content view text{
  font-size: 42rpx;
  font-weight: bold;
}
.section .content .text{
  color: #000;
  font-size: 27.8rpx;
  font-weight: normal;
  margin-bottom: 47.1rpx;
  margin-right: 10rpx;
}
