.containers{
  width: 100%;
  height: 100%;
  padding: 40rpx;
  padding-top: 0;
  box-sizing: border-box;
  overflow-y: hidden;
}
.scroll-view{
  height: 100%;
  display: flex;
  white-space: nowrap;
  position: relative;
}
.collect{
  height: 80%;
  border-radius: 10rpx;
  border: 1px solid #f0f0f0;
  box-shadow: 0 0 20rpx #eee;
  position: relative;
  display: inline-block;
  padding: 20rpx;
  margin-right: 30rpx;
  overflow-y: hidden;
  vertical-align: top;
}
.collect image{
  max-height: 100%;
}