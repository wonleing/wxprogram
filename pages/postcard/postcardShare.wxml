<!--experiene.wxml-->
<view class='containers'>
  <view class='postcard'>
    <image wx:if='{{pic}}' src='{{pic}}' mode='widthFix' bindtap='screenImg' data-imgUrl="{{pic}}"></image>
  </view>
  <view class='share'>
    <button bindtap='savetolocal' class='share2'>下载</button>
    <button open-type='share' class='share1'>分享</button> 
    <button bindtap='backtohome' class='share3'>返回首页</button>
  </view>
</view>
