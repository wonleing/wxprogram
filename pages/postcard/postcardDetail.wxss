/* postcard.wxss */
.box{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.containers{
  width: 694.6rpx;
  height: 100%;
  position: relative;
}

.banner{
  width: auto;
  height: 850rpx;
  padding-top: 24.15rpx;
  position: relative;
}
.banner image{
  width: 100%;
  height: 100%;
}
.date{
  width: 128.62rpx;
  height: 148rpx;
  color: #fff;
  font-size: 30.17rpx;
  text-align: center;
  border-top: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
  margin-left: 24.15rpx;
}
.date view:nth-child(1){
  font-size: 96.7rpx;
  line-height: 99.3rpx;
}
.editPostcard{
  position: absolute;
  bottom: 0;
  left: 24.15rpx;
  transform: translateY(50%);
  width: 90.58rpx;
  color: #4cc04b;
  font-size: 72rpx;
  text-align: center;
  line-height: 90.58rpx;
  background-color: #fff;
  border-radius: 100%;
}
.createPostcard{
  width: 278.38rpx;
  color: #fff;
  font-size: 30.2rpx;
  text-align: center;
  line-height: 85.75rpx;
  background-color: #4cc04b;
  border-radius: 40rpx;
  position: absolute;
  bottom: 0;
  transform: translateY(50%);
  right: 24.15rpx;
}

.content{
  width: 100%;
  color: #8e8e8e;
  font-size: 26rpx;
  line-height: 36.23rpx;
  margin-top: 100rpx;
}
.content .textarea{
  overflow-y: scroll;
  margin-top: 30rpx;
  padding-left: 27.7rpx;
  padding-right: 27.7rpx;
}
.userinfo{
  margin-left: 39.86rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
  right: 50rpx;
}
.userName{
  font-size: 22rpx;
  margin-left: 20rpx;
  position: relative;
  top: 20rpx;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
