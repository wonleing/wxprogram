.containers{
  width: auto;
  height: 100%;
  padding-left: 44.08rpx;
  padding-right: 44.08rpx;
  overflow-y: scroll;
}
.title{
  font-size: 35.02rpx;
  line-height: 79.71rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.title .sure{
  position: absolute;
  right: 0;
  top: 0;
}
.title .sure button{
  color: #08b096;
  background-color: #fff;
}
.title .sure button::after{
  border: 0px;
}

.text{
  font-size: 30.2rpx;
  margin-top: 32.61rpx;
}
.phone input{
  font-size: 27.17rpx;
}
.phone:first-child view{
  margin-right: 40rpx;
}
.phone:first-child input{
  width: 200rpx;
}
.text view{
  display: flex;
  margin-bottom: 20.23rpx;
  vertical-align: sub;
}
.text .username view{
  flex: 1;
}
input{
  border: 1px solid #e0e2ec;
  border-radius: 10rpx;
  padding-left: 10rpx;
  position: relative;
  top: -10rpx;
}
label,.xing,.name{
  display: inline-block;
}
.xing,.name{
  width: 220.41rpx;
  height: 60.39rpx;
}