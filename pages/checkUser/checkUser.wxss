.containers{
  width: auto;
  height: 100%;
  padding-left: 27.78rpx;
  padding-right: 27.78rpx;
  overflow-y: scroll;
}
.edit{
  position: fixed;
  right: 27.78rpx;
  left: 0;
  top: 0;
  height: 132.85rpx;
  font-size: 34.42rpx;
  text-align: right;
  background-color: #fff;
  line-height: 132.85rpx;
  z-index: 2;
}
.userMessage{
  width: auto;
  border: 1px solid #dbdbdb;
  border-radius: 10rpx;
  margin-bottom: 24.76rpx;
  padding: 48.3rpx;
  position: relative;
}
.currentStyle{
  color: #fff;
  background-color: #ff7502;
  border: none;
}
.user{
  margin-bottom: 130rpx;
  margin-top: 140rpx;
}
.currentStyle .userPhone{
  color: #fff!important;
}
.currentStyle .userEmail{
  color: #fff!important;
}
.currentStyle .remove{
  color: #fff!important;
}
.userMessage .change{
  position: absolute;
  right: 48.3rpx;
  top: 48.3rpx;
  font-size: 38rpx;
}
.userMessage .remove{
  position: absolute;
  right: 48.3rpx;
  bottom: 48.3rpx;
  color: #ff0202;
  font-size: 32.36rpx;
}
.userMessage .userName{
  font-size: 34.42rpx;
  font-weight: bold;
  margin-bottom: 30.23rpx;
}
.userMessage .userPhone{
  color: #333;
  font-size: 29rpx;
}
.userMessage .userEmail{
  color: #333;
  font-size: 29rpx;
}
.add{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  color: #fff;
  font-size: 35.67rpx;
  text-align: center;
  letter-spacing: 4rpx;
  line-height: 122.58rpx;
  background-color: #4cc04b;
}